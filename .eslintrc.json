{
  "env": {
    "node": true
  },
  "extends": "eslint:recommended",
  "ignore": [
    "node_modules"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}